{
  "env": {
    "node": true,
    "es2022": true,
    "browser": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "warn",
    "semi": ["error", "always"],
    "quotes": ["error", "single", { "allowTemplateLiterals": true }],
    "indent": ["error", 2],
    "comma-dangle": ["error", "never"]
  },
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    "build/",
    "coverage/",
    "*.min.js",
    "playwright-report/",
    "test-results/",
    "**/*.py",
    "google-cloud-sdk/**/*.js",
    "functions/sentry-config.js",
    "src/sentry-web-config.js"
  ],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "parser": "@typescript-eslint/parser",
      "rules": {
        "no-undef": "off",
        "no-unused-vars": "off"
      }
    },
    {
      "files": [
        "autonomous-*.js",
        "validate-*.js",
        "scripts/*.js",
        "**/debug*.js",
        "**/cli*.js"
      ],
      "rules": {
        "no-console": "off"
      }
    },
    {
      "files": [
        "tests/**/*.js",
        "**/*.test.js",
        "**/*.spec.js",
        "**/test_*.js"
      ],
      "env": {
        "jest": true,
        "node": true
      },
      "rules": {
        "no-undef": "off",
        "no-console": "off"
      }
    }
  ]
}
