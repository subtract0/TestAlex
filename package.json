{
  "name": "acimguide-testing-suite",
  "version": "1.1.0",
  "description": "Comprehensive testing infrastructure for ACIMguide platform",
  "scripts": {
    "build": "echo 'Building ACIM Guide...' && npm run lint && echo 'Build completed - static files ready for deployment'",
    "build:staging": "echo 'Building for staging environment...' && npm run lint && echo 'Staging build completed'",
    "build:production": "echo 'Building for production environment...' && npm run lint && echo 'Production build completed'",
    "deploy:staging": "firebase use acim-guide-test && firebase deploy",
    "deploy:production": "firebase use acim-guide-production && firebase deploy",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:mutant": "mutmut run",
    "test:mutant:results": "mutmut results",
    "install:playwright": "playwright install",
    "lint": "eslint . --ext .js,.ts,.jsx,.tsx",
    "lint:fix": "eslint . --ext .js,.ts,.jsx,.tsx --fix",
    "health-check": "node scripts/health-check-ci.js",
    "test:verbose": "jest --verbose",
    "debug:ci": "node autonomous-ci-debugger.js --monitor --fix --report",
    "debug:ci:monitor": "node autonomous-ci-debugger.js --monitor",
    "debug:ci:fix": "node autonomous-ci-debugger.js --monitor --fix",
    "deploy:fixes": "node autonomous-fix-deployer.js",
    "deploy:fixes:dry-run": "node autonomous-fix-deployer.js --dry-run",
    "deploy:fixes:auto-merge": "node autonomous-fix-deployer.js --auto-merge",
    "validate:autonomous": "node validate-autonomous-system.js",
    "start:ref-tools": "node scripts/start-ref-tools-mcp.js",
    "start:ref-tools:dev": "TRANSPORT=http REF_MCP_PORT=4102 ref-tools-mcp",
    "check:ref-tools": "node scripts/start-ref-tools-mcp.js --check",
    "kill:ref-tools": "node scripts/start-ref-tools-mcp.js --kill"
  },
  "devDependencies": {
    "@babel/plugin-syntax-jsx": "^7.27.1",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.54.2",
    "@react-native-community/eslint-config": "^3.2.0",
    "@sentry/node": "^10.7.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "babel-jest": "^30.0.5",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-native": "^5.0.0",
    "firebase-admin": "^13.4.0",
    "firebase-functions": "^6.4.0",
    "jest": "^29.7.0",
    "jest-coverage-badge": "^1.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "openai": "^5.15.0",
    "playwright-mcp": "^0.0.12",
    "ts-jest": "^29.4.1",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@octokit/rest": "^20.0.2",
    "axios": "^1.11.0",
    "dotenv": "^16.0.0",
    "firebase": "^12.1.0",
    "google-auth-library": "^10.3.0",
    "googleapis": "^159.0.0",
    "node-fetch": "^3.3.2",
    "puppeteer": "^24.17.0"
  }
}
